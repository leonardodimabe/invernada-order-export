<odoo>
    <data>
        <record model="ir.ui.view" id="stock_move_operations_form_inherit">
            <field name="name">formulario de movimientos</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_stock_move_operations" />
            <field name="arch" type="xml">
                <xpath expr="//footer" position="inside">
                    <field name="has_serial_generated" invisible="1" />
                    <field name="has_tracking" invisible="1" />
                    <button name="generate_serial"
                            string="Generar Series"
                            type="object"
                            attrs="{'invisible':['|',('has_serial_generated', '=', True),('has_tracking', '!=', 'serial')]}"
                    />
                </xpath>
            </field>
        </record>

        <record id="view_move_picking_form_inherit" model="ir.ui.view">
            <field name="name">formulario de operaciones</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form" />
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="has_move_lines" invisible="1" />
                    <field name="additional" invisible="1" />
                    <field name="state" invisible="1"/>
                </field>
                <field name="product_id" position="replace">
                    <field name="product_id"
                           required="1"
                           attrs="{'readonly': ['|', '&amp;', ('state', '!=', 'draft'), ('additional', '=', False), ('has_move_lines', '=', True)]}"
                           domain="[('type', 'in', ['product', 'consu']),('categ_id', 'in', picking_type_id.warehouse_id.products_can_be_stored)]"
                    />
                </field>
            </field>
        </record>
    </data>
</odoo>