<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="paper_format_10_x_7"
            model="report.paperformat"
    >
        <field name="name">Etiqueta 10x7</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">71</field>
        <field name="page_width">100</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <report id="action_reception_label_report"
            string="Etiquetas de Recepción"
            model="stock.picking"
            report_type="qweb-html"
            name="reception.report_reception_label_template"
            paperformat="paper_format_10_x_7"
    />

    <template id="report_reception_label_template">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.get_mp_move().move_line_ids" t-as="move_line">
                        <table>
                            <thead>
                                <tr>
                                    <td colspan="2">
                                        <!--
                                        <span t-field="res_company.logo"
                                              t-options="{'widget': 'image'}"/>
                                        -->
                                        <img
                                                t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                                                style="width:100px !important;"

                                        />
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>PRODUCTOR:</td>
                                    <td>
                                        <span t-field="o.partner_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>CSG:</td>
                                    <td>
                                        <span t-field="o.partner_id.sag_code"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>N° DE GUÍA:</td>
                                    <td>
                                        <span t-field="o.guide_number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Peso:</td>
                                    <td>
                                        <span t-field="move_line.product_uom_qty"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>VARIEDAD:</td>
                                    <td>
                                        <span t-field="o.product_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>ENVASE:</td>
                                    <td>
                                        <span t-field="o.get_canning_move().product_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <h2>LOTE N°:
                                            <span t-field="move_line.lot_name"/>
                                        </h2>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <img
                                            t-att-src="'https://testerp.lainvernada.com/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',o.name,450, 50)"
                                        />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>