<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <report id="action_reception_label_report"
            string="Etiquetas de Recepción"
            model="stock.picking"
            report_type="qweb-html"
            name="reception.report_reception_label_template"
    />

    <template id="report_reception_label_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <div class="row">
                            <div class="col">
                                <span t-field="res_company.logo"
                                      t-options="{'widget': 'image'}" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                PRODUCTOR:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                CSG:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.sag_code" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                N° DE GUÍA:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.guide_number" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                VARIEDAD:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                N° DE BULTOS:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                ENVASE:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 text-right">
                                CORRELATVO:
                            </div>
                            <div class="col-md-3">
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h2>LOTE N°: <span t-field="o.name" /></h2>
                                <img
                                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, data['form']['barcode_width'], data['form']['barcode_height'])"
                                />
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>