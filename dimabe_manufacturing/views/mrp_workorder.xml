<odoo>
  <data>

    <record id="dimabe_manufacturing.work_order_lot_acton_view"
            model="ir.actions.act_window"

    >
      <field name="name">Lotes Abiertos</field>
      <field name="res_model">mrp.workorder</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('state', '=', 'progress')]</field>
    </record>

    <record id="mrp_production_workorder_form_view_inherit" model="ir.ui.view">
      <field name="name">OT</field>
      <field name="model">mrp.workorder</field>
      <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit" />
      <field name="arch" type="xml">
        <button name="button_finish" position="after">
          <button string="Agregar Pesaje de Salidas" name="button_add_weight" type="object" />
        </button>
      </field>
    </record>

    <menuitem
      id="out_weight_menu_item"
      name="Pesaje de Salidas"
      parent="mrp.menu_mrp_manufacturing"
      action="dimabe_manufacturing.work_order_lot_acton_view"
    />
  </data>
</odoo>