<odoo>
  <template id="report_stock_production_lot_serial_label">
    <t t-call="web.html_container">
      <div class="page">
        <t t-foreach="docs" t-as="o">
          <table>
            <tr>
              <td colspan="2">
                <img
                  t-att-src="'data:image/png;base64,%s' % to_text(res_company.logo)"
                  style="width:100px !important;"
                />
              </td>
            </tr>
            <tr>
              <td style="text-align: right !important;">FOLIO:</td>
              <td>
                <span t-field="o.serial_number"/>
              </td>
            </tr>

            <tr>
              <td style="text-align: right !important;">PRODUCTO:</td>
              <td>
                <span t-field="o.stock_production_lot_id.product_id.name"/>
              </td>
            </tr>
            <tr>
              <td style="text-align: right !important;">VARIEDAD:</td>
              <td>
                <span t-esc="o.stock_production_lot_id.product_id.get_variety()"/>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <h2 style="text-align: center !important;">
                  LOTE NÂ°:
                  <span t-field="o.serial_number"/>
                </h2>
              </td>
            </tr>
            <tr>
              <td colspan="2">
                <img
                  t-att-src="'%s/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % (o.get_full_url(), 'Code128',o.serial_number,450, 40)"
                />
              </td>
            </tr>
          </table>
          <br/>
        </t>
      </div>
    </t>
  </template>

  <report id="action_stock_production_lot_serial_label_report"
          string="Etiqueta para Salida de Proceso"
          model="stock.production_lot_serial"
          report_type="qweb-pdf"
          name="dimabe_manufacturing.report_stock_production_lot_serial_label"
  />
</odoo>